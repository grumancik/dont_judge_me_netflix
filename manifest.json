{
  "manifest_version": 2,

"minimum_chrome_version": "30",

  "name": "Don't judge me, Netflix!",
  "description": "Do Netflix judge you? No more with this extension!",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "management",
    "storage",
    "tabs",
    "topSites"
  ],
  "background": {
		"scripts": [
			"scripts/background.js"
		],
		"persistent": false
	}
}
